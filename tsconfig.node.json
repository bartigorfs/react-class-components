{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@utils/*": ["core/utils/*"],
      "@components/*": ["core/components/*"],
      "@api/*": ["core/api/*"],
      "@routes/*": ["core/routes/*"],
      "@hooks/*": ["core/hooks/*"],
      "@ctx/*": ["core/ctx/*"],
      "@providers/*": ["core/providers/*"]
    }
  },
  "include": ["vite.config.ts"]
}
